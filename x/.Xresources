! === rofi ===

rofi.modi:                           blocks,drun,window,ssh,combi
rofi.sidebar-mode:                   true
rofi.terminal:                       alacritty
rofi.ssh-client:                     ssh
rofi.run-shell-command:              {terminal} -e zsh -c "{cmd}"
rofi.ssh-command:                    {terminal} -e "{ssh-client} {host}"
rofi.opacity:                        100
rofi.show-icons:                     true
rofi.color-enabled:                  true
rofi.scroll-method: 	             false
rofi.hide-scrollbar: 	             true

!                  Background   Foreground  Background Alternate    Highlight Background    Highlight Foreground
rofi.color-window: #EE000000,   #BB000000,  #BB000000
rofi.color-normal: #00000000,   #ffffffff,  #00000000,              #00000000,              #AA1793D1
rofi.color-active: #00000000,   #AADEDEDE,  #00000000,              #00000000,              #AAFF0000
rofi.color-urgent: #00000000,   #CCDEDEDE,  #00000000,              #00000000,              #AAFF0000

rofi.levenshtein-sort: 	true
rofi.matching: 	   	fuzzy
rofi.separator-style:       none
rofi.font:			        Source Code Pro 12
rofi.lines:			        30
rofi.width: 			    100
rofi.padding:			    10
rofi.fullscreen:		    true

vim: set filetype=xdefaults :
                                                  
