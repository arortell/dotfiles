[colors]
background-alt = #444
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40
background = "#000000"
foreground = "#ffffff"
unfocused_blue = "#4000ff"
focused_blue = "#00bfff"
green = "#00ff40"
red = "#f04900"
yellow = "#ffea61"
black = "#000000"
white = "#ffffff"
orange = "#ff7f00"
teal = "#20b2aa"
purple = "#E007AA"


[bar/LVDS]
monitor = LVDS
width = 100%
height = 23
offset-x = 0
offset-y = -1
radius = 0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2


font-0 = UbuntuMonoNerdFont:pixelsize=10;1 
font-1 = fontawesome:pixelsize=10 
font-2 = dejavusans:pixelsize=13 
font-3 = unifont:pixelsize=13

modules-left = bspwm
modules-center = xwindow 
modules-right = filesystem cpu memory temperature battery date

tray-position = right
tray-padding = 2
tray-transparent = false
;tray-background = #0063ff

wm-restack = bspwm
;rortellwm-restack = i3
;wm-restack = i3

override-redirect = false

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

click-right = python /usr/bin/networkmanager_dmenu
click-left = rofi -show
double-click-right = python /usr/bin/networkmanager_dmenu

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
#mount-1 = /home

label-mounted = %{F#0a81f5}%mountpoint%%{F-}: %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}

