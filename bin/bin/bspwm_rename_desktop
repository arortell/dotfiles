#!/bin/bash - 
#===============================================================================
#
#          FILE: bspwm_rename_desktop.sh
# 
#         USAGE: ./bspwm_rename_desktop.sh 
# 
#   DESCRIPTION: 
# 
#       OPTIONS: ---
#  REQUIREMENTS: ---
#          BUGS: ---
#         NOTES: ---
#        AUTHOR: Adam Ortell (), arortell@gmail.com
#  ORGANIZATION: 
#       CREATED: 11/18/2016 06:10:48 AM
#      REVISION:  ---
#===============================================================================

set -o nounset                              # Treat unset variables as an error

DMENU_NF="#A3A6AB"
DMENU_NB="#34322E"
DMENU_SF="#F6F9FF"
DMENU_SB="#5C5955"

DESKTOP_NAME=`echo '' | dmenu -b -nf "$DMENU_NF" -nb "$DMENU_NB" -sf "$DMENU_SF" -sb "$DMENU_SB" -p 'Rename:'`
if [ -z $DESKTOP_NAME ]; then
    exit 0
fi

bspc desktop -n "$DESKTOP_NAME"

