   (quote
    (projectile-sift helm-projectile transpose-frame popup-switcher pdf-tools doom-modeline helm-w3m w3m company-irony company-irony-c-headers indent-guide hl-todo smart-tabs-mode helm which-key company-quickhelp company-jedi figlet lice yasnippet-snippets jedi material-theme better-defaults)))
 '(pdf-view-display-size (quote fit-width))
 '(scroll-bar-mode nil)
