${goto 5}${color1}cpu  1:${color0} ${cpugraph cpu0 8,40 afdf87 afdf87}  ${freq_g 1}${goto 125}${color1}cpu 2:${color0} ${cpugraph cpu1 8,40 afdf87 afdf87}  ${freq_g 2}${goto 243}${color1}cpu 3:${color0} ${cpugraph cpu2 8,40 afdf87 afdf87}  ${freq_g 3}${goto 360}${color1}cpu 4:${color0} ${cpugraph cpu3 8,40 afdf87 afdf87}  ${freq_g 4}   \
${color1} || \
${goto 500}${color1}load:${color0} ${loadgraph 8,30 afdf87 afdf87}  ${loadavg}   \
${goto 670}${color1}temp:${color0}${hwmon 0 temp 1}/${hwmon 1 temp 1}°   \
${goto 770}${color1}entropy: ${color0}${entropy_perc}% \
${color1}   || \
${goto 875}${color1}mem:${color0} ${memgraph 8,30 afdf87} ${memperc}% (${mem}/${memmax})   \
${goto 1070}${color1}battery:${color0} ${battery_bar 8,50} \
${color1}   || \
${goto 1200}${color1}uptime:${color0}${uptime_short} \

${goto 5}${color1}/:${color0}${fs_used_perc /}%   \
${goto 48}${color1}diskio:${color0} ${diskiograph /dev/sda 8,20 afdf87 afdf87}  ${diskio /dev/sda}%   \
${goto 180}${color1}/home: ${color0}${fs_used_perc /home}% \
${goto 258}${color1}diskio:${color0} ${diskiograph /dev/sdb 8,20 afdf87 afdf87}  ${diskio /dev/sdb}%   \
${color1}   || \
${if_up wlan0}${goto 395}${color1}wlan0:${color0} \
${wireless_essid wlan0} (${offset -10}${wireless_link_qual_perc wlan0}%)${color1}${offset 15}ip:${color0}${addrs wlan0} \
${color1}   || \
${goto 670}${color1}up :${color0} ${upspeedgraph wlan0 8,20 afdf87 afdf87} ${upspeedf wlan0} (${totalup wlan0}) \
${goto 820}${color1}down: ${color0} ${downspeedgraph wlan0 8,20 afdf87 afdf87} ${downspeedf wlan0} (${totaldown wlan0})   ${endif}\
${color1}    || \
${goto 1050}${color1}time:${color0}${time %r}   \
${goto 1200}${color1}date:${color0} ${time %a %d.%m.%Y}   \
