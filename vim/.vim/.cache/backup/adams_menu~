#!/bin/bash -
#===============================================================================
#
#          FILE: adams_menu
#
#         USAGE: best if called from a keybinding example sxhkd
#
#
#   DESCRIPTION:
#
#       OPTIONS: ---
#  REQUIREMENTS: ---
#          BUGS: ---
#         NOTES: ---
#        AUTHOR: Adam Ortell
#        EMAIL: arortell80@gmail.com
#       CREATED: 12/13/2017 10:03:27 AM
#      REVISION:  ---
#===============================================================================

set -o nounset                                  # Treat unset variables as an error

export BLUE='\033[1;94m'
export GREEN='\033[1;92m'
export RED='\033[1;91m'


menu_msg="\
1) Man Pages\n\
2) Systemd Services\n\
3) USB Devices\n\
4) Surfraw Search\n\
5) Network Manager\n\
6) Pass\n"


response=$( echo -e $menu_msg | dmenu -p "Adam's Menu -> ")
msg=$(echo $response | cut -d ')' -f1)

[ -z "$msg" ] && exit 0

case $msg in
  1*) tmp_cmd=$(apropos | cut -d' '-f1 | dmenu -i -l 40 )
    $TERMINAL --class=_man --title=_man  -e $(man $tmp_cmd) && hc floating on
    ;;
  2*) dctl
    ;;
  3*) udiskie-dmenu
    ;;
  4*) rofi-surfraw
    ;;
  5*) networkmanager_dmenu
    ;;
  6*) rofi-pass 
esac
