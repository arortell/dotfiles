#!/bin/bash -
#===============================================================================
#
#          FILE: comment_through.sh
#
#         USAGE: ./comment_through.sh
#
#   DESCRIPTION: 
#
#       OPTIONS: ---
#  REQUIREMENTS: ---
#          BUGS: ---
#         NOTES: ---
#        AUTHOR: Adam Ortell (), arortell@gmail.com
#  ORGANIZATION: 
#       CREATED: 04/01/2018 09:37:44 AM
#      REVISION:  ---
#===============================================================================

set -o nounset                                  # Treat unset variables as an error

if [ "$#" -ne 3 ]; then
  echo "Usage ./comment_through [arg1 arg2 file]"
  echo "arg1 -> line to start\\narg2 -> line to end\\n"
  exit 1
fi

sed -i "$1,$2 s/^/#/" $"3"



