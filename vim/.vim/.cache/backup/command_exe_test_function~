#!/bin/bash -
#===============================================================================
#
#          FILE: command_exe_test_function.sh
#
#         USAGE: ./command_exe_test_function [cmd name]
#
#   DESCRIPTION: this function will test the successful execution of [cmd name]
#
#       OPTIONS: ---
#  REQUIREMENTS: ---
#          BUGS: ---
#         NOTES: ---
#        AUTHOR: Adam Ortell (), arortell@gmail.com
#  ORGANIZATION: 
#       CREATED: 04/02/2018 08:55:47 AM
#      REVISION:  ---
#===============================================================================

set -o nounset                                  # Treat unset variables as an error
set -euo pipefail
IFS=$'\n\t'

function mytest {
      "$@"
       local status=$?
       if [ $status -ne 0  ]; then
          echo "error with $1" >&2
       fi
       return $status
}

mytest "$1"
