set -o nounset                                  # Treat unset variables as an error

## 5) Write a script called whichdaemon.sh that checks if the httpd and init daemons are running on your system. 
## If an httpd is running, the script should print a message like, "This machine is running a web server." Use ps to check on processes.


if [ "$#" -ne 1 ]; then
  echo "Usage ./Exercise_5.sh [process name]"
  exit 1
fi


pid="$(ps -e | grep "$1" | awk '{print $1}')"

if [ "${pid}" ]; then
  echo "${pid}"
else
  echo ""$pid" is not running.."
  exit 2
fi













