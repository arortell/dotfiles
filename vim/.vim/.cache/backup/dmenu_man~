#!/bin/bash - 
#===============================================================================
#
#          FILE: dmenu_man.sh
# 
#         USAGE: ./dmenu_man.sh 
# 
#   DESCRIPTION: 
# 
#       OPTIONS: ---
#  REQUIREMENTS: ---
#          BUGS: ---
#         NOTES: ---
#        AUTHOR: Adam Ortell (), arortell@gmail.com
#  ORGANIZATION: 
#       CREATED: 12/03/2017 09:04:18 AM
#      REVISION:  ---
#===============================================================================

set -o nounset                              # Treat unset variables as an error


tmp_cmd=$(apropos --long -s1 '.*' | dmenu -i -l 40 | cut -d' ' -f1)

terminology --name=_scratch --title=_scratch --geometry=197x53 --exec man $tmp_cmd
