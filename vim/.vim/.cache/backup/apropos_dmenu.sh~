#set -o nounset                                  # Treat unset variables as an error

menu_msg="\
1) Menu\n\
2) Man Pages\n\
3) Programming Man Pages\n\
4) Systemd Functions\n\
5) USB\n\
6) Surfraw Search\n\
7) Bspwm Cheat Sheet\n"

response=$( echo -e $menu_msg | dmenu | cut -d' ' -f1 )

case $response in
  1*) dmenu_extended_run
    ;;
  2*) tmp_cmd=$(apropos --long -s1 '.*' | dmenu -i -l 40 | cut -d' ' -f1)
      terminology --name=_scratch --title=_scratch --geometry=197x53 --exec man $tmp_cmd
    ;;
  3*) tmp_cmd=$(apropos --long -s2,3,4,5,6,7,8 '.*'| dmenu -b -i -l 40 | cut -d" " -f1 )
      terminology --name=_scratch --title=_scratch --geometry=197x53 --exec man $tmp_cmd
    ;;
  4*) dctl
    ;;
  5*) udiskie-dmenu
    ;;
  5*) rofi-surfraw
    ;;
esac

