#!/bin/bash -
#===============================================================================
#
#          FILE: uncomment_thru
#
#         USAGE: ./uncomment 'line to start' 'line to end' 'file'
#
#   DESCRIPTION: uncomment lines in a file
#
#       OPTIONS: ---
#  REQUIREMENTS: ---
#          BUGS: ---
#         NOTES: ---
#        AUTHOR: Adam Ortell (), arortell@gmail.com
#  ORGANIZATION: 
#       CREATED: 04/01/2018 09:37:44 AM
#      REVISION:  ---
#===============================================================================

set -o nounset                                  # Treat unset variables as an error

if [ "$#" -eq 3 ]; then
  if sed -i "$1,$2 s/^#//g" "$3"; then
    if sed -i "$1,$2 s/^[ |\\t]*//" "$3"; then
      echo "Lines $1 though $2 uncommented successfully....."
    fi
  else
    echo "sed failed....."
  fi
elif [ "$#" -eq 1 ]; then
  if sed -i 's/^#//g' "$1"; then
    if sed -i "s/^[ |\\t]*//" "$1"; then
      echo "file uncommented successfully....."
    fi
  else
    echo "sed failed....."
  fi
fi


## TODO: redirect sed's output to log file ??

sed -i "s/^[ 	]*//"
